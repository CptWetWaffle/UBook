        <AppBarButton x:Name="btnShoppingCart" HorizontalAlignment="Left" Icon="Shop" Label="Shopping Cart" Margin="939,-10,0,0" VerticalAlignment="Top" Click="AppBarButton_Click_2"/>

    </Grid>
</Page>
